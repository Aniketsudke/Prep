

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_DATABASE")
}

model User {
  id              String       @id @default(uuid()) 
  username        String       @unique
  email           String       @unique
  password        String?      
  avatarUrl       String?      
  provider        Provider
  createdAt       DateTime     @default(now())
  updatedAt       DateTime?     @updatedAt
}



enum Provider {
  google
  credentials
}